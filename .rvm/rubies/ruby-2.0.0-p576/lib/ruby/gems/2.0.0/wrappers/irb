#!/usr/bin/env bash

if
  [[ -s "/home/junghwan/.rvm/gems/ruby-2.0.0-p576@global/environment" ]]
then
  source "/home/junghwan/.rvm/gems/ruby-2.0.0-p576@global/environment"
  exec irb "$@"
else
  echo "ERROR: Missing RVM environment file: '/home/junghwan/.rvm/gems/ruby-2.0.0-p576@global/environment'" >&2
  exit 1
fi
